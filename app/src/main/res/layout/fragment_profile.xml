<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1dp"
        android:hint="Email"
        android:orientation="horizontal"
        android:outlineSpotShadowColor="@color/endGreenColor"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/yeonsung"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Name"/>

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/yeonsung"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="lorem ipsum"
            android:textColor="#918A8A"
            android:inputType="text"
            android:layout_marginStart="36dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1dp"
        android:autofillHints="emailAddress"
        android:outlineSpotShadowColor="@color/endGreenColor"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/yeonsung"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Address"/>

        <EditText
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:text="Lorem ipsum is placeholder text commonly used in the graphic, print and publishing industries for previewing layouts and visual"
            android:textColor="#918A8A"
            android:layout_marginStart="16dp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1dp"
        android:autofillHints="Email"
        android:outlineSpotShadowColor="@color/endGreenColor"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/yeonsung"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Email"/>

        <EditText
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:text="Lorem ipsum@gmail.com"
            android:textColor="#918A8A"
            android:layout_marginStart="16dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="15dp"
        android:elevation="1dp"
        android:autofillHints="Email"
        android:outlineSpotShadowColor="@color/endGreenColor"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/yeonsung"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Phone"/>

        <EditText
            android:id="@+id/profile_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:text="1234567890"
            android:textColor="#918A8A"
            android:layout_marginStart="16dp"
            android:background="@color/white"/>
    </LinearLayout>


    <Button
        android:id="@+id/logOutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Log Out" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_profile_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Save Information"
        android:textSize="18sp"
        android:elevation="10dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:textAllCaps="false"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/yeonsung"
        android:textColor="@color/endGreenColor"
        android:background="@drawable/btn_shape_lg"
        android:shadowDy="350"
        android:outlineAmbientShadowColor="@color/endGreenColor"
        android:outlineSpotShadowColor="@color/endGreenColor"
        android:shadowRadius="5"
        android:shadowColor="@color/endGreenColor"/>



</LinearLayout>